                        <Button Content="UPDATE" VerticalAlignment="Top" Height="30" HorizontalAlignment="Right" Width="120" Canvas.Left="830" Canvas.Top="243" Cursor="Hand" Click="Update_Click" ToolTip="Click to update the item" TabIndex="10"/>
                        <Button Content="DELETE" VerticalAlignment="Top" Height="30" HorizontalAlignment="Right" Width="120" Canvas.Left="1000" Canvas.Top="243" Cursor="Hand" Click="Delete_Click" ToolTip="Click to delete the item" TabIndex="11"/>
                        <Button Content="PRINT" VerticalAlignment="Top" Height="30" HorizontalAlignment="Right" Width="120" Canvas.Left="1000" Canvas.Top="562" Cursor="Hand" Click="Print_Click" ToolTip="Click to create the Document" TabIndex="12"/>
                        <Button Content="RESET" VerticalAlignment="Top" Height="30" HorizontalAlignment="Right" Width="120" Canvas.Left="860" Canvas.Top="562" Cursor="Hand" Click="Reset_Click" ToolTip="Click to reset the data" TabIndex="13"/>


                    </Canvas>
                    <DataGrid x:Name="DataGridView" Height="258" Grid.Row="1" VerticalAlignment="Top" Margin="55,0.2,70.4,0" MinColumnWidth="120" CanUserSortColumns="False" CanUserReorderColumns="False" AutoGenerateColumns="True" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Number}" MinWidth="50" FontWeight="Bold"/>
                            <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" MinWidth="250"/>
                            <DataGridTextColumn Header="Bags Count" Binding="{Binding BagsCount}"/>
                            <DataGridTextColumn Header="Weight" Binding="{Binding Weight}"/>
                            <DataGridTextColumn Header="Rate" Binding="{Binding Rate}"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding Amount}"/>
                            <DataGridTextColumn Header="Moist" Binding="{Binding Moisture}"/>
                            <DataGridTextColumn Header="Claim" Binding="{Binding Claim}"/>
                            <DataGridTextColumn Header="Final Amount" Binding="{Binding FinalAmount}"/>

                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Voucher" FontSize="16">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Label x:Name="titleLabel_Copy" Content="RAMESWARA RICE MILL PVT. LTD." FontWeight="Bold" Margin="353,20,369,661.4" FontSize="24" TextOptions.TextFormattingMode="Display" TextOptions.TextHintingMode="Animated" FontStretch="SemiExpanded" ClipToBounds="True" SnapsToDevicePixels="True" HorizontalContentAlignment="Center" VerticalAlignment="Stretch"/>
    </Grid>


</Window>
